<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <classPathEntry
            location="C:\Users\gaojunwei\.m2\repository\mysql\mysql-connector-java\5.1.21\mysql-connector-java-5.1.21.jar"/>

    <context id="localMySQL">
        <plugin type="org.mybatis.generator.internal.IngoreSetterAndGetterPlugin" />
        <!-- 需要修改源码 -->
        <commentGenerator type="org.mybatis.generator.internal.MyCommentGenerator">
            <!-- 文件编码 -->
            <property name="javaFileEncoding" value="UTF-8" />
            <!-- 忽略所有注解，使用自定义的注解生成 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>

        <connectionFactory>
            <property name="driverClass" value="com.mysql.jdbc.Driver"/>
            <property name="connectionURL" value="jdbc:mysql://127.0.0.1:3306/test"/>
            <property name="userId" value="root"/>
            <property name="password" value="tiger"/>
        </connectionFactory>

        <!-- 生成bean -->
        <javaModelGenerator targetPackage="com.gjw.common.innovation.repository.domain"
                            targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 生成map -->
        <sqlMapGenerator targetPackage="mapper/mysql"
                         targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
            <property name="namespacePackage" value="com.gjw.common.innovation.repository"/>
        </sqlMapGenerator>

        <table tableName="t_user" domainObjectName="TUser">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>